<div class="banner" style="background-image: url(https://madridfoodtour.com/wp-content/uploads/retiro-overhead-U-scaled.jpeg);">
  <div class="banner-container">
    <h1>Madrid</h1>
    <h3>Walking Tours</h3>
  </div>
</div>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="What should we say here?" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>

<% @walks.each do |walk|%>
  <p>
    <%=link_to walk_path(walk), class:"btn btn-gradient" do%>
      <%=  walk.title %>
    <% end %>
  </p>
<% end %>

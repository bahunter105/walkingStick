<%= content_for(:navbar_class, "navbar-transparent") %>

<div class="banner" style="background-image: url(https://madridfoodtour.com/wp-content/uploads/retiro-overhead-U-scaled.jpeg);">
  <div class="banner-container">
    <h1>Madrid</h1>
    <h3>Walking Tours</h3>
  </div>
</div>

<%= render 'shared/search_form' %>

<% @walks.each do |walk| %>
  <%= link_to walk_path(walk) do %>
    <div class="card-walk">
      <%= image_tag "puerta_retiro.png", alt: "Retiro" %>
      <div class="card-walk-infos">
        <div class="card-group-top">
          <h2><%= walk.title %></h2>
          <p>
            <% walk.rating.to_i.times do %>
              <span class="fas fa-star"></span>
            <% end %>
            <% walk.blank_stars.times do %>
              <span class="far fa-star"></span>
            <% end %>
          </p>
        </div>
        <div class="card-group-bottom">
          <div class="text-left">
            <p><%= walk.creator.email %></p>
          </div>
          <div class="text-right">
            <p>Distance</p>
            <p>Time</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

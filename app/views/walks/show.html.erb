<%= content_for(:navbar_class, "navbar-transparent") %>

<h1> <%= @walk.title %> </h1>
<p>
  <%=link_to walk_landmark_path(@walk.landmarks.first) do%>
    <%= @walk.landmarks.first.title %>
  <% end %>
</p>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<p>
  <%=link_to walks_path do%>
    Back to Walks Index page: <%= @walk.title %>
  <% end %>
</p>
